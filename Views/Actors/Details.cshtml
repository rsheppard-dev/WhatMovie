@using WhatMovie.Models.TMDB
@model ActorDetail

<div class="d-flex">
  <div class="flex-shrink-0">
    <img src="@Model.ProfilePath" alt="@Model.Name">
  </div>
  <div class="flex-grow-1 ms-3">
    <div class="row">
        <table class="table table-hover">
            <tbody>
                <tr>
                    <td>Name:</td>
                    <td>@Model.Name</td>
                </tr>
                <tr>
                    <td>Biography:</td>
                    <td>@Model.Biography</td>
                </tr>
                <tr>
                    <td>Birthday:</td>
                    <td>@Model.Birthday</td>
                </tr>
                <tr>
                    <td>Place of Birth:</td>
                    <td>@Model.PlaceOfBirth</td>
                </tr>
            </tbody>
        </table>
    </div>
  </div>
</div>